---
interface Props {
    link: string;
}

const { link } = Astro.props;
---

{
    link !== "" && link !== null && typeof link !== "undefined" ? (
        <a class="social" href={link}>
            <slot />
        </a>
    ) : (
        <div class="social">
            <slot />
        </div>
    )
}

<style lang="scss">
    .social {
        display: grid;
        grid-template-columns: auto auto;

        color: white;
        text-decoration: none;
        background: black;
        font-weight: bold;
        font-family: monospace;
        font-size: large;

        padding: 0.4em 0.6em;
        border-radius: 0.2em;

        align-items: center;
        justify-content: space-between;
    }
</style>
