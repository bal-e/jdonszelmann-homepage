---
import Layout from "../layouts/Layout.astro";
import Social from "../components/Social.astro";

import { icon } from "@fortawesome/fontawesome-svg-core";

import { faEarthEurope } from "@fortawesome/free-solid-svg-icons";
import {
	faMastodon,
	faGithub,
	faLinkedin,
} from "@fortawesome/free-brands-svg-icons";
// import matrix from "../../assets/images/matrix.svg";
---

<Layout title="Jonathan Dönszelmann">
	<div class="main" slot="main">
		<div class="title">
			<h3>You have reached the homepage of</h3>
			<h1>Jonathan Dönszelmann</h1>
		</div>
		<div class="websites grid"></div>
		<div class="projects grid"></div>
	</div>
	<div class="socials grid" slot="socials">
		<Social link="https://fedi.xirion.net/@jonathan">
			<i set:html={icon(faMastodon).html} />
			<span>@jonathan@xirion.net</span>
		</Social>
		<Social link="https://github.com/jdonszelmann">
			<i set:html={icon(faGithub).html} />
			<span>jdonszelmann</span>
		</Social>
		<Social link="https://www.linkedin.com/in/jdonszelmann/">
			<i set:html={icon(faLinkedin).html} />
			<span>jdonszelmann</span>
		</Social>
		<Social link="https://donsz.nl">
			<i set:html={icon(faEarthEurope).html} />
			<span>https://donsz.nl</span>
		</Social>
		<!-- <Social link="">
			<i>
				<svg
					aria-hidden="true"
					focusable="false"
					role="img"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 496 512"
					><path fill="currentColor" d={matrix.}></path>
				</svg>
				<span>https://donsz.nl</span>
			</i>
		</Social> -->

		<style lang="scss">
			.main {
				display: flex;
				flex-direction: column;

				.title {
					text-align: center;
				}
			}

			.grid {
				display: grid;
				column-gap: 1em;
				row-gap: 1em;
				grid-template-columns: repeat(auto-fit, minmax(14em, 1fr));
			}
		</style>

		<style is:global>
			i {
				width: 1.33em;
				height: 1.33em;
			}
		</style>
	</div>
</Layout>
